<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/princestar"
    tools:context="com.example.qq.projectmini2018.Activity4Add">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPhoto"
        android:layout_marginBottom="10dp"
        android:paddingLeft="50dp"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textViewName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                android:text="Profile"
                android:textColor="#ffa64d"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:background="#ffffff"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/photo_add"
                android:hint="Profile photo"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14dp" />

            <AutoCompleteTextView
                android:id="@+id/textAddName"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:background="#ffffff"
                android:drawablePadding="5dp"
                android:hint="Name"
                android:inputType="text"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14dp" />

            <AutoCompleteTextView
                android:id="@+id/textAddEmail"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:background="#ffffff"
                android:drawablePadding="5dp"
                android:hint="E-mail"
                android:inputType="text"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14dp" />

            <AutoCompleteTextView
                android:id="@+id/textAddPhone"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:background="#ffffff"
                android:drawablePadding="5dp"
                android:hint="Phone no"
                android:inputType="phone"
                android:maxLength="12"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14dp" />

            <Button
                android:id="@+id/butInsert"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="INSERT"
                android:textColor="#ffffff"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
