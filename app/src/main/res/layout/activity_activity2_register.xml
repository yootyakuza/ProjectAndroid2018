<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qq.projectmini2018.Activity2Register">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/prince" />

    <ImageView
        android:id="@+id/imgviewDetail"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imgviewDetail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/trans_white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="Already go to final project"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <AutoCompleteTextView
                android:id="@+id/RegitserUser"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@drawable/iconman"
                android:drawablePadding="5dp"
                android:hint="Username"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14dp" />

            <AutoCompleteTextView
                android:id="@+id/RegisterPass"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@drawable/iconkey"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14dp" />

            <AutoCompleteTextView
                android:id="@+id/RegisterConfirm"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@drawable/key"
                android:drawablePadding="5dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14dp" />

            <Button
                android:id="@+id/butRegister"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgviewDetail"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="Please fill in all information."
        android:textColor="#ffffff"
        android:textSize="10sp" />
</RelativeLayout>
